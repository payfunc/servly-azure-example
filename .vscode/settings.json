{
	"files.exclude": {
		".*": true,
		"*.json": true,
		"dist": true,
		"README.md": true,
		"LICENSE": true,
		"tsconfig.*": true,
		"node_modules": true,
		"*.code-workspace": true
	},
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	"azureFunctions.deploySubpath": ".",
